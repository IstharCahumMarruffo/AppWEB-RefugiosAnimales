<%- include('templates/cabecera',{tituloPag:'autenticacion', css:'indexstyle'})%>
<body>
<div class="container"> 
<div class="header">
<%- include('templates/navbar')%>
</div>
<div class="centro">
  <div class="form">
  <div class="form1">
    <h1 id="formTitle" style="margin-top: 70px; text-align: left;">Iniciar Sesión</h1>
    <br>
  <!-- Formulario de Login -->
  <form id="loginForm" action="/login" method="POST">
    <input type="email" id="correo" name="correo" placeholder="Correo" required />
    <br>
    <input type="password" id="contrasena" name="contrasena" placeholder="Contraseña" required />
    <br>
    <button type="submit" class="btn btn-primary">Entrar</button>
    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#modalAdminCuenta">
      Administrar Cuenta
  </button>
  </form>
</div>
  <!-- Formulario de Registro -->
   <div class="form2">
  <h1 style="text-align: left;">¿No tienes cuenta?</h1>
  <h2 style="text-align: left;">Regístrate aquí</h2>
  <form id="registerForm" action="/register" method="POST">
    <label for="nombre">Nombre:</label>
    <input type="text" id="nombre" name="nombre" required><br><br>

    <label for="correo">Correo:</label>
    <input type="email" id="correo" name="correo" required><br><br>

    <label for="contrasena">Contraseña:</label>
    <input type="password" id="contrasena" name="contrasena" required><br><br>

    <label for="edad">Edad:</label>
    <input type="number" id="edad" name="edad" required><br><br>

    <label for="tipo_vivienda">Tipo de Vivienda:</label>
    <input type="text" id="tipo_vivienda" name="tipo_vivienda" required><br><br>

    <label for="motivos">Motivos:</label>
    <textarea id="motivos" name="motivos" required></textarea><br><br>

    <button type="submit" class="btn btn-secondary">Registrar</button>

</form>
</div>

</div>
<div class="footer">
    <%- include('templates/footer')%>
</div>
<%- include('templates/modalUsuario', { usuario: usuario || {} }) %>

</div>
</body>
</html>
